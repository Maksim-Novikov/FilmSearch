<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="10dp"
    android:background="?attr/selectableItemBackground"
    >

  <ImageView
      android:id="@+id/item_film_poster"
      android:layout_width="100dp"
      android:layout_height="100dp"
      android:scaleType="centerCrop"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      />

  <TextView
      android:id="@+id/item_film_name"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:textSize="20sp"
      android:layout_marginHorizontal="10dp"
      android:textColor="@color/black"
      app:layout_constraintStart_toEndOf="@id/item_film_poster"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:text="Властелин колец"
      />

  <TextView
      android:id="@+id/item_film_year"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:textColor="@color/black"
      android:textSize="14sp"
      android:layout_marginHorizontal="10dp"
      app:layout_constraintTop_toBottomOf="@id/item_film_name"
      app:layout_constraintStart_toEndOf="@id/item_film_poster"
      app:layout_constraintEnd_toEndOf="parent"
      tools:text="2004"
      />

  <TextView
      android:id="@+id/item_film_rating"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:textColor="@color/black"
      android:textSize="18sp"
      android:layout_marginHorizontal="10dp"
      app:layout_constraintTop_toBottomOf="@id/item_film_year"
      app:layout_constraintStart_toEndOf="@id/item_film_poster"
      app:layout_constraintEnd_toEndOf="parent"
      tools:text="Рейтинг ожидания 90%"
      />
</androidx.constraintlayout.widget.ConstraintLayout>